@page
@model StudentiWeb.Pages.Discipline.CreateModel

@{
    ViewData["Title"] = "Adauga disciplina";
}

<h1>Adauga disciplina</h1>

<h4>Disciplina</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div class="form-group">
                <label asp-for="Disciplina.Nume" class="control-label"></label>
                <input asp-for="Disciplina.Nume" class="form-control" />
                <span asp-validation-for="Disciplina.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Disciplina.Cod" class="control-label"></label>
                <input asp-for="Disciplina.Cod" class="form-control" />
                <span asp-validation-for="Disciplina.Cod" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Adauga" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Inapoi la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
