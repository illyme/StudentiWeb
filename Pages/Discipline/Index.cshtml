@page
@model StudentiWeb.Pages.Discipline.IndexModel

@{
    ViewData["Title"] = "Mentenanta discipline";
}

<h1>Lista discipline</h1>

<p>
    <a asp-page="Create">Adauga disciplina</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Disciplina[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disciplina[0].Cod)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Disciplina) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cod)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Modifica</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Detalii</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Sterge</a>
            </td>
        </tr>
}
    </tbody>
</table>
