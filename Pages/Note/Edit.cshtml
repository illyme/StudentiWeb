@page
@model StudentiWeb.Pages.Note.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Nota</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">

            <input type="hidden" asp-for="Nota.ID" />
            <div class="form-group">
                <label asp-for="Nota.StudentID" class="control-label"></label>
                <span class="form-control" readonly="readonly">
                    @Model.Nota.Student.NumeSiPrenume
                </span>
            </div>
            <div class="form-group">
                <label asp-for="Nota.DisciplinaID" class="control-label"></label>
                <span class="form-control" readonly="readonly">
                    @Model.Nota.Disciplina.Nume
                </span>
            </div>
            <div class="form-group">
                <label asp-for="Nota.Valoare_nota" class="control-label"></label>
                <input asp-for="Nota.Valoare_nota" class="form-control" />
                <span asp-validation-for="Nota.Valoare_nota" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
